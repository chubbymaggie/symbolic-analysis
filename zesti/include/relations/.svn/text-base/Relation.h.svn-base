#ifndef RELATIONS_H
#define RELATIONS_H

namespace llvmpa {

// Type for a relation.
typedef const char *Relation;
// Type for a domain.
typedef const char *Domain;

// Return the arity of the given relation.
unsigned arity(Relation R);

// Return the domain at the index of the given tuple.
Domain getDomainAtIndex(Relation R, unsigned index);

// Return the name of the nth relation in the table.
Relation getNameOfRelation(unsigned n);

}

#endif
